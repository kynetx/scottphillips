<h1>Listing users</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Password</th>
    <th>First</th>
    <th>Last</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.password %></td>
    <td><%= user.first %></td>
    <td><%= user.last %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

